{
  "name": "cli",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/cli/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/cli",
        "main": "libs/cli/src/index.ts",
        "tsConfig": "libs/cli/tsconfig.lib.json",
        "assets": ["libs/cli/*.md"]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/cli/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/cli/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "pull-cms-content": {
      "executor": "nx:run-commands",
      "options": {
        "command": "SHOULD_RUN_STANDALONE=true API_URL={args.apiUrl} STRAPI_API_KEY={args.apiKey} ts-node --transpileOnly --project libs/cli  libs/cli/src/lib/pull-cms-content/index.ts"
      }
    },
    "start-rebuild-survey-public-cron": {
      "executor": "nx:run-commands",
      "options": {
        "command": "API_URL={args.apiUrl} STRAPI_API_KEY={args.apiKey} CMS_REFRESH_INTERVAL_MIN={args.interval} ts-node --transpileOnly --project libs/cli  libs/cli/src/lib/rebuild-survey-public-cron/index.ts"
      }
    }
  },
  "tags": []
}
